

    <!-- START PAGE CONTENT WRAPPER -->
    <div class="page-content-wrapper">
        <section id="mainSection" class="no-overflow bg-Image relative" style="background-image: url('/images/home/authenticate.jpg');">
            <!-- START PAGE CONTENT -->
            <div class="content  ">
                <div class="registerContainer active" style="margin-top: 50px;">
                    <div class="registerCard" style=" ">
                        <div class="fs-12 title text-center relative">
                            <img src="/images/brantublacklogo.svg" alt="logo" class="authenticateLogo"/>
                            <h5 class=" bold text-spaced-medium all-caps text-center">
                                Tack för att du använder BRANTU!
                            </h5>
                            <p class="text-center p-r-20 p-b-20 p-l-20 smallCaps fs-13"><font class="capitalize">Bli</font> Medlem Och Ta Del Utav Det Senaste Inom Mode! Vi Uppdaterar Sidan Med Nya Produkter Och Erbjudanden Varje Vecka, Så Håll Utkik På Facebook Och Vår Hemsida!</p>
                            {{#if errorMessage}}
                                <div id="registerError" >
                                    <p  class="text-red all-caps text-center" > du är redan medlem<a href="/login" class="p-l-10 bold all-caps">Logga in</a></p>
                                </div>
                            {{/if}}
                        </div>

                        <!--<div class="button-container padding-1v" style="margin-bottom: 30px;">
                            <a href="/auth/facebook">
                                <button id="facebookAccess" style="background-color: #3b5998;">
                                    <span> <i class="fa fa-facebook" style="color:#fff;"></i></span>
                                </button>
                            </a>
                        </div>-->

                        <form id="signupFormPage"  role="form" action="/signupUser" method="post">

                            <div class="input-container">
                                <input type="email" name="email" id="emailSignupPage" required="required"/>
                                <label for="emailSignupPage" >Din e-postadress</label>
                                <div class="bar"></div>

                            </div>

                            <div class="input-container">
                                <input type="password" name="password" id="passwordSignupPage"  required="required"/>
                                <label for="passwordSignupPage" >Lösenord</label>
                                <div class="bar"></div>
                            </div>

                            <div class="input-container"  style="margin-bottom: 20px;">
                                <input type="password"  id="passwordSignupPageConfirm" required="required"/>
                                <label for="passwordSignupPageConfirm">Upprepa lösenord</label>
                                <div class="bar"></div>
                            </div>
                            <div id="registerPagePasswrodError" style="display:none;">
                                <p  class="text-red text-center all-caps" >Dina lösenord matchar inte</p>
                            </div>

                            <div class="input-radio">
                                <div class="col-xs-8 col-xs-offset-4">
                                    <div class="radio  radio-default auto-margin block " id="genderSelectionSignupPage">
                                        <input type="radio"  value="female"  name="gender" id="femaleSignupPage" />
                                        <label for="femaleSignupPage"  class=" bold ">Kvinna</label>

                                        <input type="radio"  value="male"   name="gender" id="maleSignupPage" />
                                        <label for="maleSignupPage"  class=" bold ">Man</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-10 col-sm-offset-1 p-t-10">
                                <div class="row">
                                    <div class="col-xs-1">
                                        <div class="full-width">
                                            <input class="pull-right" type="checkbox" name="concent" id="concent" required/>
                                        </div>
                                    </div>
                                    <div class="col-xs">
                                        <label  for="concent"class=" fs-13">Jag godkänner medlemsvillkoren och att mina personuppgifter behandlas enligt ovan, medlemsvillkoren samt Brantus <a class="text-velvet" href="/privacy-policy">Integritetspolicy</a>.</label>
                                    </div>
                                </div>
                            </div>

                            <div class="button-container p-t-10">
                                <button id="submitRegistration" ><span >Välkommen In</span></button>
                            </div>
                        </form>

                    </div>
                </div>
                <div class="registerLoading fixed" style="display: none; top:0; bottom:0; right:0; left:0; z-index:500;">
                    <div class="loading full-height full-width gradient-velvet-opacity" >
                        <div class="bgBlurEffect">
                            <div class="text-center" style="padding-top: 100px;" >
                                <div class=" text-center ">
                                    <h3 class="text-white">Vi jämför och hittar dina stilar till det bästa priset</h3>
                                    <img src="/images/progress/progress-circle-lg-white.svg" style="width:40px; height:40px">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        {{>loading}}
        {{>footer}}
        <!-- END PAGE CONTENT -->
    </div>
