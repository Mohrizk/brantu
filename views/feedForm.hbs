 <!-- START PAGE CONTENT WRAPPER -->
  <div class="page-content-wrapper bg-master-light">
      <section class="bg-master-light" id="mainSection">
        <!-- START PAGE CONTENT -->
        <div class="row bg-master-light">
            <div class=" col-md-offset-2 col-md-8">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title sbold">
                            Create Out Fit
                        </div>
                    </div>
                    <div class="panel-body m-b-80">
                        <h5>
                            Lets create an outfit
                        </h5>

                        <p class="{{#if valid}} text-velvet {{else}} text-red{{/if}}">{{message}}</p>

                        <form class="" role="form" action="/admin/create-price-card" method="post">
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group  form-group-default  ">
                                        <label class="all-caps">Style Product ID</label>
                                        <input pattern=".{24,24}" class="form-control" name="styleProduct" placeholder="Please enter product ID" />
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group  form-group-default ">
                                        <label class="all-caps">Style Product Image (optional)</label>
                                        <input type="url" class="form-control" name="styleImage"   placeholder="Please enter Image url" />
                                    </div>
                                </div>
                            </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="form-group  form-group-default  ">
                                    <label class="all-caps">Price Product ID</label>
                                    <input pattern=".{24,24}" class="form-control" name="priceProduct"  placeholder="Please enter product ID" />
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group  form-group-default ">
                                    <label class="all-caps">Price Product Image (optional)</label>
                                    <input type="url" class="form-control" name="priceImage"   placeholder="Please enter Image Url"/>
                                </div>
                            </div>
                        </div>

                            <div class="p-t-40">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group form-group-default required">
                                            <label class="all-caps">Name of the outfit</label>
                                            <input type="text" pattern=".{10,150}" class="form-control" name="name" placeholder="i.e. Winter is here, time for a Coat" required=""/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-group-default required">
                                    <label class="all-caps">Description</label>
                                    <input type="text" pattern=".{50,400}" class="form-control" name="description" placeholder="Please add a description of the outfit" maxlength="200" required=""/>
                                </div>
                            </div>

                            <div class="p-t-40 p-b-40">
                                <div class="form-group form-group-default required">
                                    <label class="all-caps">Category Name</label>
                                    <input type="text"  class="form-control" placeholder="i.e. Lågskor" name="categoryName" required=""/>
                                </div>
                                <div class="form-group form-group-default required">
                                    <label class="all-caps">Category Url</label>
                                    <input type="url"  class="form-control" name="categoryLink" placeholder="i.e. http://www.brantu.com/explore?q=&hFR[products][0]=Kvinna%20%3E%20Skor%20%3E%20L%C3%A5gskor" required=""/>
                                </div>
                                <div>
                                    <div class="radio radio-pink  block text-center" id="genderSelection2">
                                        <input type="radio" class="registration" value="female" data-for="registration" required="required" name="gender" id="outfitMale">
                                        <label for="outfitMale" class="text-pink-darker bold relative">Kvinna</label>

                                        <input type="radio" class="registration" value="male" data-for="registration" required="required" name="gender" id="outfitFemale">
                                        <label for="outfitFemale" class=" text-pink-darker bold relative">Man</label>
                                    </div>
                                </div>
                            </div>



                            <div class="form-group  form-group-default required">
                                <label class="all-caps">Creator</label>
                                <input type="text" class="form-control" name="creator" placeholder="i.e. Fredrik Granström" required=""/>
                            </div>
                            <div class="row p-b-50">
                                <div class="col-xs-6 p-t-10">
                                    <div class="form-group form-group-default input-group col-sm-10">
                                        <label class="fade">Date of publish</label>
                                        <input type="text" name="startDate" class="form-control" placeholder="Start Date" required data-provide="datepicker">
                                            <span class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                            </span>
                                    </div>

                                </div>
                                <div class="col-xs-3">
                                    <div class="form-group">
                                        <label for="sel1">Time of publish:</label>
                                        <select class="form-control" name="startTime" required>
                                            <option value="12:00:00">12 pm</option>
                                            <option value="15:00:00">3 pm</option>
                                            <option value="16:00:00">6 pm</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xs">
                                    <div class="v-align-middle text-right p-t-20">
                                     <button type="submit" class="btn btn-rounded btn-info">Submit</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>

            </div>

        </div>
      </section>
    <!-- END PAGE CONTENT -->
    </div>
  <!-- END PAGE CONTENT WRAPPER -->

 <script type="text/javascript" src='/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js'></script>
