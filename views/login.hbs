
    <!-- START PAGE CONTENT WRAPPER -->
<div class="page-content-wrapper bg-transparent">
    <section class="no-header" id="mainSection">
            <!-- START PAGE CONTENT -->
        <div>
            <div>

                <div class="registerContainer" style="margin-top: 30px;">
                    <div class="registerCard text-center">
                        <div class="">
                            <a href="/">
                            <img src="/dist/images/logo_white.svg" alt="logo"  width="180"/>
                            </a>
                        </div>
                        <h1 class="title text-center all-caps text-spaced-medium bold">
                            Login
                        </h1>
                        <div style="margin-top: 30px;">
                            <form id="loginFormPage" role="form" action="/loginUser" method="post">
                                <div class="input-container">
                                    <input type="email" name="email" id="loginEmailPage" required="required"/>
                                    <label for="loginEmailPage">Email</label>
                                    <div class="bar"></div>
                                </div>
                                <div class="input-container">
                                    <input type="password" name="password" id="loginPasswordPage" required="required"/>
                                    <label for="loginPasswordPage">Lösenord</label>
                                    <div class="bar"></div>
                                </div>
                                {{debug errorMessage}}

                                {{#if errorMessage}}
                                    {{#if (compareStrings errorMessage 'nouser')}}
                                    <div id="loginError" class="col-sm-12">
                                        <p  class="text-red text-center" > Ditt konto är inte registrerat <a class="light text-white" href="/signup">bli medlem här</a></p>
                                    </div>
                                    {{else}}
                                        <div id="loginError" class="col-sm-12">
                                            <p  class="text-red text-center" > fel lösenord <a href="/forget">har du glömt ditt lösenord?</a></p>
                                        </div>
                                    {{/if}}
                                {{/if}}


                                    <div>
                                        <a class="text-white sbold" href="/forget"><u>har du glömt ditt lösenord?</u></a>
                                    </div>
                                    <div class="button-container p-t-10" id="submitLogin">
                                         <button type="submit"><span>Logga in</span></button>
                                    </div>
                            </form>
                            <div class=" text-center">
                                <div class="p-t-20">
                                    <a class="all-caps b-b bold text-white" href="/signup">
                                        bli medlem
                                    </a>
                                </div>
                                <div class="p-t-20">
                                    <a class="all-caps  bold text-white" href="/">
                                        Go to Home
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </section>
    <!-- END PAGE CONTENT -->
    </div>
