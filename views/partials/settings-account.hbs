<div class="padding-30 auto-overflow">
   <h2>Account</h2>
    <div class="m-t-30 b-t">
        <form id="changeNameForm" action="/settings/change/name">
            <h4>Change Name</h4>
            <div class="row">
                <div class="col-xs-3">Name</div>
                <div class="col-xs"><input name="name" id="changeName" value="{{#if user.local.name}}{{user.local.name}}{{else}}{{user.facebook.name}}{{/if}}" class="form-control"  style="width:100%;max-width: 300px;"/></div>
            </div>
            <button type="submit" id="changeNameSubmitButton" class="btn btn-info m-t-20" style="display: none;">Save Changes</button>
        </form>
    </div>
    {{#if user.local.name}}
    <div class="m-t-30 m-b-30 b-t b-b">
        {{debug accountStatus}}
        {{#if (stringContains accountStatus 'password-dont-match')}}
            <h4 class="text-pink-darker">Your Old password don't match</h4>
        {{/if}}
        {{#if (stringContains accountStatus 'password-changeh')}}
            <h4 class="text-pink-darker">Password Changed Successfully</h4>
        {{/if}}
        <form id="changePasswordSettingsForm" action="/settings/change/password">
            <h4>Change Password</h4>
            <div class="row">
                <div class="col-xs-3">Old Password</div>
                <div class="col-xs"><input name="oldPassword" id="oldPassword" class="form-control" type="password" style="width:100%;max-width:300px;" required/></div>

            </div>
            <div class="row p-t-5">
                <div class="col-xs-3">New Password</div>
                <div class="col-xs"><input name="newPassword" id="newPassword" type="password" class="form-control" style="width:100%;max-width: 300px;" required/></div>

            </div>
            <div class="row p-t-5">
                <div class="col-xs-3">Confirm New Password</div>
                <div class="col-xs"><input name="newPasswordConfirm" id="newPasswordConfirm" type="password"  class="form-control"  style="width:100%;max-width: 300px;" required/></div>
            </div>
            <div id="warningConfirmPass" class="text-pink-dark" style="display: none;">Make sure the new Password and confirm new password match</div>
            <button type="submit" id="changePassSubmitButton" class=" btn btn-info m-t-20" style="display: none;">Save Changes</button>
        </form>
    </div>
    {{/if}}
</div>