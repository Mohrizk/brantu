<div id="AuthenticationPopUp" class="hidden authenticationPopUp" style="position: fixed; left:0; right:0; top:0; bottom:0; z-index:1000; background:linear-gradient(to left,rgba(151,151,151,0.9) , rgba(151,151,151,0.9)); ">
    <div class="fa-2x top-right bg-master-lightest" style="border-radius:50%; margin-right:50px; margin-top:50px;" id="close-AuthenticationPopUp"><i class="pg-close_line "></i></div>

    <div class="registerContainer " style="margin-top: 50px;">
        <div class="registerCard">
            <h1 class="title text-center">
                <div class="">
                    <img src="/images/logo-b-1x.png" alt="logo" data-src="/images/logo-b-1x.png" data-src-retina="/images/logo_2x.png"  style="width:200px;"/>
                </div>
                Login
            </h1>
           <!-- <div class="button-container padding-1v">
                <a  href="/auth/facebook">
                    <button id="facebookAccess" style="background-color: #3b5998;">
                        <span> <i class="fa fa-facebook" style="color:#fff;"></i></span>
                    </button>
                </a>
            </div>-->
            <div style="margin-top: 30px;">
                <form id="loginForm" role="form" action="/loginUser" method="post">
                    <div class="input-container">
                        <input type="email"  name="email"  id="loginEmail" required="required"/>
                        <label for="Email1">Email</label>
                        <div class="bar"></div>
                    </div>
                    <div class="input-container">
                        <input type="password" name="password" id="loginPassword" required="required"/>
                        <label for="Password">Password</label>
                        <div class="bar"></div>
                    </div>
                    <div id="loginError" class="col-sm-12" style="display: none;">
                        <p  class="text-red text-center" > Your email or password are not correct</p>
                    </div>
                    <div class="button-container" id="submitLogin">
                        <button type="submit"><span>Login</span></button>
                    </div>
                    <div class="footer"><a href="#">Forgot your Password</a></div>
                </form>
            </div>
        </div>
        <div class="registerCard alt">
            <div class="toggle"></div>

            <h1 class="title text-center">
                <div class="">
                    <img src="/images/logo_2x.png" alt="logo" data-src="/images/logo_2x.png" data-src-retina="/images/logo_2x.png"  style="width:200px;"/>
                </div>
                Sign Up
                <div class="close"></div>
            </h1>
            <!--<div class="button-container padding-1v" style="margin-bottom: 30px;">
                <a href="/auth/facebook">
                    <button id="facebookAccess" style="background-color: #3b5998;">
                        <span> <i class="fa fa-facebook" style="color:#fff;"></i></span>
                    </button>
                </a>
            </div>-->

            <form id="signupForm"  role="form" action="/signupUser" method="post">
                <div class="input-container">
                    <input type="text" id="nameSignUp" name="name" required="required"/>
                    <label for="nameSignUp">Din Namn</label>
                    <div class="bar"></div>
                </div>

                <div class="input-container">
                    <input type="email" name="email" id="emailSignUp" required="required"/>
                    <label for="emailSignUp">Din e-postadress</label>
                    <div class="bar"></div>
                </div>

                <div class="input-container" style="margin-bottom: 20px;">
                    <input type="password" name="password" id="passwordSignUp" required="required"/>
                    <label for="PasswordSignUp">Lösenord</label>
                    <div class="bar"></div>
                </div>

                <div class="input-radio">
                    <div class="col-xs-8 col-xs-offset-4">
                        <div class="radio radio-default auto-margin block " id="genderSelection">
                            <input type="radio" class="registration"  value="female" data-for="registration" required="required" name="gender" id="female" />
                            <label for="female"  class="text-pink bold relative">Kvinna</label>
                            <input type="radio" class="registration"   value="male" data-for="registration" required="required"  name="gender" id="male" />
                            <label for="male"  class=" text-pink bold relative">Man</label>
                        </div>
                    </div>
                    <div class="col-sm-10 text-center col-sm-offset-1">
                        <h6 class="text-white">By clicking Sign Up, you agree to our  <a target="_blank" href="http://www.brantu.com/terms-and-conditions"> Terms &amp; Conditions</a> and that you have read our <a target="_blank" href="http://www.brantu.com/privacy-policy">Privacy Policy</a></h6>
                    </div>
                </div>
                <div id="registerError" class="col-sm-12" style="display:none;">
                    <p  class="text-pink text-center" > It seems that this account is already in use</p>
                </div>
                <div class="button-container">
                    <button type="submit" id="submitRegistration"><span>Välkommen In</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
