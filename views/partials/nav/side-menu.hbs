<nav class="page-sidebar hidden-md hidden-xlg hidden-lg" >
    <!-- BEGIN SIDEBAR MENU TOP TRAY CONTENT-->
    <!-- END SIDEBAR MENU TOP TRAY CONTENT-->
    <!-- BEGIN SIDEBAR MENU HEADER-->
    <style>
        .mobile-nav-tab a{
            color:white;
            font-weight: bold;
            font-size: 18px;
            transition: all 0.12s linear;
        }
        .mobile-nav-tab a.active{
            color:#9E8130;
            font-weight: bolder;
        }
        .mobile-nav-tab a.active:after{
            position: absolute;
            top: 32px;
            left: 46.1%;
            display: inline-block;
            border-right: 8px solid transparent;
            border-bottom: 8px solid #000;
            border-left: 8px solid transparent;
            content: '';
        }
        .mobile-nav-tab a.active:before{
            position: absolute;
            top: 30px;
            left: 45%;
            display: inline-block;
            border-right: 10px solid transparent;
            border-bottom: 10px solid #9E8130;
            border-left: 10px solid transparent;
            content: '';
        }
    </style>
    <div>
        <div class="m-t-10 row p-b-10">
            {{#if user}}
                <div class="text-center">
                        {{#if user.facebook.name}}
                            <span class="thumbnail-wrapper circular d32  bold  inline all-caps" style="font-size:16px; border:1px solid #9E8130; background: #000;  color:#9E8130; padding-top:4px;" id="avatar">
                                {{trimForAvatar user.facebook.name}}
                            </span>
                            <span class=" text-black sbold  inline all-caps fs-12" style="  padding-top:8px;" id="avatar">
                                {{user.facebook.name}}
                            </span>

                        {{else}}
                            <span class="thumbnail-wrapper circular d32  bold   inline all-caps " style="font-size:16px; border:1px solid #9E8130; background: #000; color:#9E8130; padding-top:4px; " id="avatar">
                                {{trimForAvatar user.local.email}}
                            </span>
                            <span class=" text-black sbold  inline all-caps fs-12" style=" line-height:33px;" id="avatar">
                                {{user.local.email}}
                            </span>
                        {{/if}}
                </div>
                <div class="row m-t-20">
                    <div class=" col-xs-6 text-center">
                        <a href="/settings">
                            <button class="btn btn-info btn-block">
                                <i><img src="/dist/images/nav/settings.png" style="width:20px;"/></i>
                                <font class="title fs-15 " >Settings</font>
                            </button>
                        </a>

                    </div>
                    <div  class="col-xs-6 text-center" >
                        <a href="/logout">
                            <button class="btn btn-info btn-block">
                                <i><img src="/dist/images/nav/logout.png" style="width:20px;"/></i>
                                <font class="title fs-15 " >logout</font>
                            </button>
                        </a>
                    </div>
                </div>
            {{else}}
                <div class="row">
                    <div class="col-xs-6 authenticateMobile text-center" data-view="signup">
                        <div class="btn btn-info  btn-block">Bli medlem</div>
                    </div>
                    <div class="col-xs-6 authenticateMobile text-center" data-view="login">
                        <button class="btn btn-info text-black btn-block ">logga In</button>
                    </div>
                </div>
            {{/if}}
        </div>
        <div class="row p-t-20 p-b-20 b-t b-transparent-white bg-black">
        {{#each categoryTree}}
            <div class="col-xs-6 text-center mobile-nav-tab">
                <a  class="inline   sidebar-header-title cursor all-caps text-spaced
                {{#if (compareStrings ../selectedDepartment this.department.name)}}active{{/if}}"
                    data-mobile-nav="{{this.department.key}}">
                    {{this.department.name}}
                </a>
            </div>
        {{/each}}
        </div>
    <!-- END SIDEBAR MENU HEADER-->
    <!-- START SIDEBAR MENU -->
    {{#each categoryTree}}
        <div class="sidebar-menu {{#unless (compareStrings ../selectedDepartment this.department.name) }} hidden {{/unless}}"  data-mobile-nav-toggle="{{this.department.key}}">
            <div class="scroll-wrapper  menu-items relative no-overflow" >
            <ul class="menu-items scroll-content" style="margin-bottom: 0px; margin-right: 0px; height: 100%; padding-bottom: 50px;">
                 <li class="m-t-10 b-b">
                    <a href="/{{this.department.key}}" >
                        <span class="title all-caps bold text-black" > {{this.department.name}} home</span>
                    </a>
                </li>
                {{#each categories}}
                    <li class="m-t-10 b-b">
                        <a class=" bold text-black"><span class="title all-caps">{{andfixer category.name}}</span>
                            <span class="arrow"></span></a>
                        <ul class="sub-menu">
                                <li>
                                    <a class=" bold text-black" href="{{{category.url}}}"  data-page-ref>Alla</a>
                                </li>

                            {{#each subCategory}}
                                <li>
                                    <a class=" bold text-black" href="{{{this.url}}}" data-page-ref>{{andfixer this.name}}</a>
                                </li>
                            {{/each }}
                        </ul>
                    </li>
                {{/each }}



                <li class="m-t-10 b-b">
                    <a href="/favourite-products"><span class="title all-caps bold text-black" >Favourite</span></a>

                    <!--<span class="detail">{{#if nbFavProducts}} {{nbFavProducts}} {{else}}0{{/if}}</span>-->
                </li>
        </ul>
    </div>
        </div>
    {{/each}}


    <!-- END SIDEBAR MENU -->
</nav>
<div class="page-sidebar-cover hidden"></div>

